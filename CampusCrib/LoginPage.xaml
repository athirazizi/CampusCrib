<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CampusCrib.LoginPage"
             
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Welcome to CampusCrib!" HorizontalOptions="Center" FontSize="Large"/>
            <Frame Margin="30,10,30,10">
                <StackLayout>
                    <Entry Placeholder="Username"/>
                    <Entry Placeholder="Password" IsPassword="True"/>
                    <Button x:Name="btnLogin" Clicked="btnLogin_Clicked" Text="Login" WidthRequest="300"/>
                </StackLayout>
            </Frame>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Don't have an account?"/>
                <Label Text="Register here."/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>